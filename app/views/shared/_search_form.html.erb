<%= simple_form_for :search, url: gears_path, html: { class: 'form-inline', id: "searchform" }, method: :get do |f|%>

  <%= f.input :location, placeholder: "Your location", label: false, required: false,  input_html: { value: session[:searched][:location], onFocus: "geolocate()" } %>

  <%#= f.input :city, label: false, placeholder: "city", required: false, input_html: { type: "hidden" } %>
  <%#= f.input :latitude, label: false, placeholder: "latitude", required: false, input_html: { type: "hidden" } %>
  <%#= f.input :longitude, label: false, placeholder: "longitude", required: false, input_html: { type: "hidden"} %>

  <%= f.input :start_date, placeholder: "Start date", label: false, required: false, input_html: { value: session[:searched][:start_date], class: "input-date" } %>

  <%= f.input :end_date, placeholder: "End date", label: false, required: false, input_html: { value: session[:searched][:end_date], class: "input-date" } %>

  <%= f.input :category_id, collection: Category.all, label: false, prompt: "Choose gear",  selected: session[:searched][:category_id], error: 'Please specify the category of gear you are looking for'%>

  <%= f.submit "Find", class: "btn btn-primary", :wrapper => :nested %>
<% end %>

