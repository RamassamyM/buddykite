<div class="container">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-4">
      <h3>my orders</h3>
      <% @user_orders.each do |order| %>
        <div class="order">
          <div class="order-wrap">
            <%= image_tag cl_image_path(order.gear.photo.path), class: "order-image hidden-xs" %>
            <div class='order-body'>
              <h3><%= order.gear.brand %></h3>
              <p><%= order.gear.model %></p>
              <p class="price"><%= compute_order_price(order) %>€ (<%= order.infos %>€/day)</p>
              <p>from : <%= order.start_at.strftime(format = '%d/%m/%Y') %></p>
              <p>to : <%= order.end_at.strftime(format = '%d/%m/%Y') %></p>
            </div>
          </div>
          <% if order.end_at <= Date.today %>
            <div class="review">
              <div class="review-header text-center">
                <p>show review</p>
                <i class="fa fa-angle-down"></i>
              </div>
              <div class="review-content">
                <% if !order.reviews.nil? %>
                <div>
                  <p><%= order.reviews %> &nbsp <%= '⭐' * order.rating %></p>
                </div>
                <% else %>
                <div>
                  <%= render 'review_form', order: order %>
                </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-4">
      <h3>My gears</h3>
      <% @owner_orders.each do |order| %>
        <div class="order">
          <%= image_tag cl_image_path(order.gear.photo.path), class: "order-image hidden-xs" %>
          <div class='order-body'>
            <div>
              <h3><%= order.gear.brand %></h3>
              <p><%= order.gear.model %></p>
              <p class="price"><%= compute_order_price(order) %>€ (<%= order.infos %>€/day)</p>
              <p>from : <%= order.start_at.strftime(format = '%d/%m/%Y') %></p>
              <p>to : <%= order.end_at.strftime(format = '%d/%m/%Y') %></p>
              <% unless order.reviews.nil? %>
                <hr>
                <p><%= order.reviews %> &nbsp <%= '⭐' * order.rating %></p>
              <% end %>
            </div>
          </div>
          <% unless order.reviews.nil? %>
            <p>show review</p>
            <i class="fa fa-angle-down"></i>
            <%= order.reviews %> &nbsp <%= '⭐' * order.rating %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
