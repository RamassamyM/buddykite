<%= simple_form_for :search, url: gears_path, html: { class: 'form-inline' }, method: :get do |f|%>
  <%= f.input :city, placeholder: "Place", label: false %>
  <%= f.input :date, placeholder: "Date", label: false %>
  <%= f.input :category_id, collection: Category.all, label: false, prompt: "Choose gear" %>
  <%= f.submit "Find", class: "btn btn-primary", :wrapper => :nested %>
<% end %>
