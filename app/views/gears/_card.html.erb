<div class="card">
  <% if item.photo? %>
    <div class="gear-image-card">
      <%= cl_image_path item.photo.path, height: 200, width: 400, crop: :fill %>
    </div>
  <% else %>
    <div class="" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
  url("<%= image_url('logo-blue.png')%>")>
    </div>
  <% end %>
  <div class="card-category"><%= item.size.category.name %></div>
  <div class="card-brand"><%= item.brand %></div>
  <div class="card-description">
      <h2><%= item.model + " - " + item.size.name %></h2>
      <p><%= (item.price / 100).round(0).to_s + "â‚¬ - " + item.description + " - " + item.address %></p>
  </div>
  <% if item.owner.photo? %>
    <%= cl_image_path item.owner.photo.path, class: "card-user avatar" %>
  <% else %>
    <%= image_tag 'user.png', class: "card-user avatar" %>
  <% end %>
</div>
